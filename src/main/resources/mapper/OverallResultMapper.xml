<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hospital.mapper.OverallResultMapper">

    <resultMap type="com.hospital.entity.OverallResult" id="OverallResultMap">
        <result property="orId" column="orId" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="orderId" column="orderId" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="OverallResultMap">
        select
orId, title, content, orderId
        from overall_result
        where orId = #{orId}
    </select>

    <!--查询指定行数据-->
    <select id="queryAll" resultMap="OverallResultMap">
        select
orId, title, content, orderId
        from overall_result
        <where>
            <if test="orId != null">
                and orId = #{orId}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="orderId != null">
                and orderId = #{orderId}
            </if>
        </where>
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(*)
        from overall_result
        <where>
            <if test="orId != null">
                and orId = #{orId}
            </if>
            <if test="title != null and title != ''">
                and title = #{title}
            </if>
            <if test="content != null and content != ''">
                and content = #{content}
            </if>
            <if test="orderId != null">
                and orderId = #{orderId}
            </if>
        </where>
    </select>
    <select id="queryOverallResultByOrderId" resultMap="OverallResultMap">
        select * from overall_result where orderId = #{orderId}
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="orId" useGeneratedKeys="true">
        insert into overall_result(title, content, orderId)
        values (#{title}, #{content}, #{orderId})
    </insert>

    <insert id="insertBatch" keyProperty="orId" useGeneratedKeys="true">
        insert into overall_result(title, content, orderId)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.title}, #{entity.content}, #{entity.orderId})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="orId" useGeneratedKeys="true">
        insert into overall_result(title, content, orderId)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.title}, #{entity.content}, #{entity.orderId})
        </foreach>
        on duplicate key update
title = values(title),
content = values(content),
orderId = values(orderId)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update overall_result
        <set>
            <if test="title != null and title != ''">
                title = #{title},
            </if>
            <if test="content != null and content != ''">
                content = #{content},
            </if>
            <if test="orderId != null">
                orderId = #{orderId},
            </if>
        </set>
        where orId = #{orId}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from overall_result where orId = #{orId}
    </delete>

</mapper>


